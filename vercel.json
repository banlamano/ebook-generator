{
  "version": 2,
  "buildCommand": "cd client && npm install --legacy-peer-deps && CI=false npm run build",
  "outputDirectory": "client/build",
  "framework": null,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://ebook-generator-api.onrender.com/api"
  }
}
