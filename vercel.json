{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/ebooks/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/templates/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/subscriptions/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/user/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
